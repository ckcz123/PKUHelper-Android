<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PickerEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowTitleSize">48dp</item>
        <item name="android:actionBarStyle">@style/CustomizedWindowTitleBackground</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBars</item>
        <item name="android:actionBarTabTextStyle">@style/actionBarTabText</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomizedWindowTitleBackground" parent="@android:style/Widget.Holo.Light.ActionBar">
        <!--        <item name="android:background">#2d90dc</item> -->
        <item name="android:background">@drawable/actionbar</item>

        <item name="android:titleTextStyle">@style/titleTextStyle</item>
    </style>

    <style name="MyActionButtonOverflow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/item</item>

    </style>

    <style name="MyActionBarTabBars" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">#171115</item>

    </style>

    <style name="titleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <!--     	 <item name="android:textColor">#ffffff</item>   -->
        <item name="android:textColor">#000000</item>
    </style>

    <style name="actionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">#929292</item>
    </style>

    <style name="Style_RecordText" mce_bogus="1" >
        <item name="android:textColor">@color/color_text_record</item>
    </style>
    <style name="Style_RecordText_FirstLine"  parent="Style_RecordText">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="Style_RecordText_SecondLine"  parent="Style_RecordText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Style_RecordItemDividerHeight"  parent="Style_RecordText">
        <item name="android:height">25dp</item>
    </style>
    <style name="Style_RecordBG"  >
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">8dp</item>
    </style>
    
    <style name="Style_RecordRadius"  >
        <item name="android:radius">10dp</item>
    </style>
    
    <style name="Style_RecordRecent_Text"  >
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/color_text_default</item>
        <item name="android:textScaleX">1.6</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
    </style>


</resources>
