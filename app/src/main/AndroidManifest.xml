<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.pkuhelper"
          android:versionCode="20"
          android:screenOrientation="portrait"
          android:installLocation="internalOnly"
          android:versionName="2.0.4">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/icon"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.pkuhelper.PKUHelper"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.pkuhelper.grade.GradeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.classroom.ClassActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.subactivity.SubActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.pkuhole.HoleActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.pkuhole.HolePost"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.pkuhole.HoleComment"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.pkuhole.HoleSearch"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.pkuhole.old.PKUHoleActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.noticecenter.NCActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.lostfound.LostFoundActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.lostfound.AddActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.lostfound.old.LostFoundActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.gesture.GestureActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.course.DeanCourseActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.course.CustomCourseActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.pkuhelper.course.ExamActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name"/>
        <activity
            android:name="com.pkuhelper.chat.ChatActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name"/>
        <activity
            android:name="com.pkuhelper.bbs.BBSActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name"/>
        <activity
            android:name="com.pkuhelper.bbs.ViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name"/>
        <activity
            android:name="com.pkuhelper.bbs.PostActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"/>
        <activity
            android:name="com.pkuhelper.bbs.MessageActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name"/>
        <activity
            android:name="com.pkuhelper.bbs.FavoriteActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name"/>
        <activity
            android:name="com.pkuhelper.bbs.MessagePostActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"/>

        <activity
            android:name="com.pkuhelper.qrcode.QRCodeActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name"/>

        <activity
            android:name="com.pkuhelper.qrcode.MipcaActivityCapture"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name="com.pkuhelper.media.MediaActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".selfstudy.SelfStudyActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.pkuhelper.selfstudy.ActivityRecords"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name">
        </activity>

        <service android:name="com.pkuhelper.service.PKUHelperService"/>

        <receiver
            android:name="com.pkuhelper.widget.WidgetItsProvider"
            android:label="@string/widget_its">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_its_provider"/>
        </receiver>

        <receiver
            android:name="com.pkuhelper.widget.IPGWNotification"
            android:label="@string/widget_its"
            />

        <receiver
            android:name="com.pkuhelper.widget.WidgetCourseProvider"
            android:label="@string/widget_course">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_course_provider"/>
        </receiver>

        <receiver
            android:name="com.pkuhelper.widget.WidgetCourse2Provider"
            android:label="@string/widget_course2">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_course2_provider"/>
        </receiver>

        <receiver
            android:name="com.pkuhelper.widget.WidgetExamProvider"
            android:label="@string/widget_exam">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_exam_provider"/>
        </receiver>

        <service
            android:name="com.pkuhelper.widget.WidgetCourseService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>
        <service
            android:name="com.pkuhelper.widget.WidgetCourse2Service"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>
        <service
            android:name="com.pkuhelper.widget.WidgetExamService"
            android:permission="android.permission.BIND_REMOTEVIEWS"/>
        <service android:name="com.pkuhelper.widget.WidgetActionService"/>

        <receiver android:name="com.pkuhelper.service.AlarmReceiver"/>

        <receiver android:name="com.pkuhelper.service.MyReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.ACTION_DREAMING_STOPPED"/>
            </intent-filter>
        </receiver>


    </application>

</manifest>
